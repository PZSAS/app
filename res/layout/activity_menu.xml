<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E606F" >

    <TextView
        android:id="@+id/menu_text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Menu"
        android:textSize="36dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/menu_button_start"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/menu_text_menu"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#193441"
        android:textSize="30dp"
        android:text="Start" />

    <Button
        android:id="@+id/menu_button_history"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_button_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#193441"
        android:textSize="30dp"
        android:text="Historia" />

    <Button
        android:id="@+id/menu_button_update"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_button_history"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#193441"
        android:textSize="30dp"
        android:text="Aktualizuj" />

    <Button
        android:id="@+id/menu_button_exit"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_button_update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="#193441"
        android:textSize="30dp"
        android:text="WyjÅ›cie" />

</RelativeLayout>